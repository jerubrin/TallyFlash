<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Base application theme. -->
    <style name="Theme.TallyFlash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/activityDarkBackground</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/secondary_white</item>
        <item name="elevationOverlayEnabled">false</item>

        <item name="editTextStyle">@style/EditText.Style</item>

        <item name="android:buttonStyle">@style/Button.Style.Dark</item>
    </style>

    <style name="EditText.Style" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="Button.Style.Dark" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_main_dark</item>
    </style>
</resources>