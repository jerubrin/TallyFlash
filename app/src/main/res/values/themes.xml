<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TallyFlash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#FFF9E7</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="elevationOverlayEnabled">false</item>

        <item name="android:buttonStyle">@style/Button.Style.Light</item>
    </style>

    <style name="Button.Style.Light" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_main</item>
    </style>
</resources>