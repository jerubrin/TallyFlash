<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.TallyFragment"
    android:background="@color/off">

    <TextView
        android:id="@+id/text_view_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_number"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/main_margin"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/text_view_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="CAMERA 1 CAMERA 1 CAMERA 1 CAMERA 1 CAMERA"
        android:textStyle="italic"
        android:textSize="@dimen/text_size_app_name"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="PREVIEW"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/text_view_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:maxLines="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>